<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.12.2025"
            android:textSize="14sp"
            android:textColor="#1E88E5"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="г. Москва, ул. Ленина, 10"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="6dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvViolation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Превышение скорости"
            android:textSize="14sp"
            android:textColor="#D32F2F"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvPassport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Паспорт: 1234 567890"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Комментарий инспектора"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
