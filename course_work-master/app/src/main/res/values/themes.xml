<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CourseWork" parent="Theme.Material3.Light.NoActionBar">
        <item name="materialButtonOutlinedStyle">@style/MySegmentedButtonStyle</item>
    </style>



    <style name="MySegmentedButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/my_inactive_color</item>
        <item name="strokeColor">@color/Darkset</item>
        <item name="strokeWidth">1dp</item>

        <item name="materialThemeOverlay">@style/MySegmentedOverlay</item>
    </style>

    <style name="MySegmentedOverlay">
        <item name="colorPrimary">@color/my_active_color</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>



</resources>